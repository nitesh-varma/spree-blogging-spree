<%= link_to blog_entry_permalink(blog_entry), rel: blog_entry.nofollow_label do %>
  <div class="col-md-4 blog_entry">
    <div class="card">
      <div class="row">
        <div class="col-xs-12">
          <% if blog_entry.blog_entry_image.present? %>
            <%= image_tag(main_app.url_for(blog_entry.blog_entry_image.url(:product)), alt: blog_entry.blog_entry_image.alt, class: 'lazy img img-responsive img-prefill-portrait blog-image') %>
          <% end %>
        </div>
        <div class="col-xs-10 col-xs-offset-1 text-center summary">
          <h4 class="h4 rs-title"><%= blog_entry.title %> </h4>
          <% if action_name == 'index' %>
            <div class="light">
              <h5 class="h5 pull-left"><%= blog_entry.author.try(:nickname) %></h5>
              <h5 class="h5 pull-right"><%= l(blog_entry.published_at, format: :blog_date) %></h5>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
